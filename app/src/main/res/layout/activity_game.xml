<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_light">

    <!-- Top Bar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/primary"
        android:elevation="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:title="@string/current_game"
        app:titleTextColor="@color/white"
        app:navigationIcon="@android:drawable/ic_menu_close_clear_cancel"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintBottom_toBottomOf="parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Game Status Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardGameStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/game_status"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/grey_dark"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/grey"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="12dp"/>

                    <!-- Status -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:text="Status:"
                            android:textColor="@color/grey_dark"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/tvStatus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Not Started"
                            android:textColor="@color/grey"
                            android:textStyle="bold"/>
                    </LinearLayout>

                    <!-- Difficulty -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:text="@string/difficulty"
                            android:textColor="@color/grey_dark"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/tvDifficulty"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Medium"
                            android:textColor="@color/grey_dark"/>
                    </LinearLayout>

                    <!-- Points Collected -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:text="@string/points_collected"
                            android:textColor="@color/grey_dark"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/tvPointsCollected"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="@color/grey_dark"/>
                    </LinearLayout>

                    <!-- Duration -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:text="@string/duration"
                            android:textColor="@color/grey_dark"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/tvDuration"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0:00"
                            android:textColor="@color/grey_dark"/>
                    </LinearLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Difficulty Selection Card (shown when no active game) -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardDifficultySelection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                android:layout_marginBottom="16dp"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/select_difficulty"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/grey_dark"
                        android:layout_marginBottom="16dp"/>

                    <!-- Easy Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnEasy"
                        style="@style/ButtonSecondary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/easy"
                        android:layout_marginBottom="8dp"
                        app:icon="@android:drawable/star_big_on"
                        app:iconTint="@color/easy_color"/>

                    <!-- Medium Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnMedium"
                        style="@style/ButtonSecondary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/medium"
                        android:layout_marginBottom="8dp"
                        app:icon="@android:drawable/star_big_on"
                        app:iconTint="@color/medium_color"/>

                    <!-- Hard Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnHard"
                        style="@style/ButtonSecondary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/hard"
                        app:icon="@android:drawable/star_big_on"
                        app:iconTint="@color/hard_color"/>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Start Game Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnStartGame"
                style="@style/ButtonPrimary"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="@string/start_game"
                android:visibility="gone"/>

            <!-- Loading Indicator -->
            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="24dp"
                android:visibility="gone"/>

            <!-- Info Text -->
            <TextView
                android:id="@+id/tvInfoText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/select_difficulty"
                android:textColor="@color/grey"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:textAlignment="center"/>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>